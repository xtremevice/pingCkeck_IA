<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PingMonitor.ViewModels"
        xmlns:controls="using:PingMonitor.Controls"
        xmlns:converters="using:PingMonitor.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="600"
        x:Class="PingMonitor.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Ping Monitor"
        Width="1200" Height="600">

    <Window.Resources>
        <converters:OnlineStatusToBrushConverter x:Key="OnlineStatusToBrushConverter"/>
    </Window.Resources>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel Margin="10">
        <!-- Top panel for adding sites and configuring interval -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="Ping Monitor" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto,Auto">
                <TextBox Grid.Column="0" 
                         Watermark="Enter URL or IP (e.g., google.com or 8.8.8.8)" 
                         Text="{Binding NewSiteUrl}" 
                         Margin="0,0,10,0"/>
                
                <Button Grid.Column="1" 
                        Content="Add Site" 
                        Command="{Binding AddSiteCommand}"
                        Margin="0,0,10,0"
                        Padding="15,5"/>
                
                <TextBlock Grid.Column="2" 
                           Text="Interval (ms):" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                
                <NumericUpDown Grid.Column="3" 
                               Value="{Binding PingInterval}"
                               Minimum="100"
                               Maximum="10000"
                               Increment="100"
                               Width="120"
                               Margin="0,0,10,0"/>
                
                <Button Grid.Column="4" 
                        Content="Update Interval" 
                        Command="{Binding UpdateIntervalCommand}"
                        Margin="0,0,10,0"
                        Padding="15,5"/>
                
                <Button Grid.Column="5" 
                        Content="Generate Report" 
                        Command="{Binding GenerateReportCommand}"
                        Padding="15,5"/>
            </Grid>
            
            <!-- Report Status Message -->
            <TextBlock Text="{Binding ReportStatus}" 
                       Foreground="Green"
                       FontSize="12"
                       Margin="0,5,0,0"
                       TextWrapping="Wrap"
                       IsVisible="{Binding ReportStatus, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
        </StackPanel>

        <!-- List of sites being monitored -->
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Sites}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="10"
                                    Background="Transparent">
                                <Grid ColumnDefinitions="200,120,120,120,*,100,80">
                                    <!-- URL -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Url}" 
                                                   FontWeight="Bold"
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding StatusText}" 
                                                   FontSize="12"
                                                   Foreground="{Binding IsOnline, Converter={StaticResource OnlineStatusToBrushConverter}}"/>
                                    </StackPanel>

                                    <!-- Last Ping -->
                                    <StackPanel Grid.Column="1" Margin="10,0">
                                        <TextBlock Text="Last" 
                                                   FontSize="10"
                                                   Foreground="Gray"/>
                                        <TextBlock Text="{Binding LastPingMs, StringFormat={}{0} ms}" 
                                                   FontSize="14"
                                                   FontWeight="Bold"/>
                                    </StackPanel>

                                    <!-- Average -->
                                    <StackPanel Grid.Column="2" Margin="10,0">
                                        <TextBlock Text="Avg (50)" 
                                                   FontSize="10"
                                                   Foreground="Gray"/>
                                        <TextBlock Text="{Binding AveragePing50, StringFormat={}{0:F1} ms}" 
                                                   FontSize="14"
                                                   FontWeight="Bold"/>
                                    </StackPanel>

                                    <!-- Max -->
                                    <StackPanel Grid.Column="3" Margin="10,0">
                                        <TextBlock Text="Max" 
                                                   FontSize="10"
                                                   Foreground="Gray"/>
                                        <TextBlock Text="{Binding MaxPingMs, StringFormat={}{0} ms}" 
                                                   FontSize="14"
                                                   FontWeight="Bold"/>
                                    </StackPanel>

                                    <!-- Mini Graph (Line) -->
                                    <controls:MiniPingGraph Grid.Column="4" 
                                                           DataPoints="{Binding PingHistoryPoints}"
                                                           Height="60"
                                                           Margin="10,0"/>

                                    <!-- Mini Scatter Graph (Last 10 Points) -->
                                    <controls:MiniScatterGraph Grid.Column="5" 
                                                              DataPoints="{Binding Last10PingPoints}"
                                                              Height="60"
                                                              Width="90"
                                                              Margin="10,0"/>

                                    <!-- Remove Button -->
                                    <Button Grid.Column="6" 
                                            Content="Remove"
                                            Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).RemoveSiteCommand}"
                                            CommandParameter="{Binding}"
                                            VerticalAlignment="Center"
                                            Padding="10,5"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </DockPanel>

</Window>
